<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FoodMap.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FoodMap"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!-- Login Page (Page de dÃ©marrage) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <!-- Location Permission Page -->
    <ShellContent
        Title="Location"
        ContentTemplate="{DataTemplate local:LocationPermissionPage}"
        Route="LocationPermissionPage" />

    <!-- Home Page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage" />

    <!-- Restaurant Detail Page -->
    <ShellContent
        Title="Restaurant"
        ContentTemplate="{DataTemplate local:RestaurantDetailPage}"
        Route="RestaurantDetailPage" />

</Shell>