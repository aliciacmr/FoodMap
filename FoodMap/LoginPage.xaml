<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodMap.LoginPage"
             BackgroundColor="#FFFFFF"
             Shell.NavBarIsVisible="False">

	<ScrollView>
		<VerticalStackLayout Padding="30,80,30,30" Spacing="20">

			<!-- Logo -->
			<Image Source="logo_foodmap.jpg"
                   HeightRequest="120"
                   WidthRequest="120"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>

			<!-- App Name -->
			<Label Text="FoodMap"
                   FontFamily="Arial"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#280374"
                   HorizontalOptions="Center"
                   Margin="0,0,0,40"/>

			<!-- Email/Username Label -->
			<Label Text="Pseudonyme ou Email"
                   FontFamily="Roboto"
                   FontSize="16"
                   TextColor="#280374"
                   Margin="0,0,0,5"/>

			<!-- Email Entry -->
			<Border StrokeThickness="1"
                    Stroke="#E0E0E0"
                    BackgroundColor="#FAFAFA"
                    StrokeShape="RoundRectangle 12"
                    Padding="0"
                    HeightRequest="55">
				<Entry Placeholder=""
                       PlaceholderColor="#999999"
                       TextColor="#000000"
                       FontFamily="Roboto"
                       FontSize="16"
                       Margin="15,0"/>
			</Border>

			<!-- Password Label -->
			<Label Text="Mot de passe"
                   FontFamily="Roboto"
                   FontSize="16"
                   TextColor="#280374"
                   Margin="0,10,0,5"/>

			<!-- Password Entry -->
			<Border StrokeThickness="1"
                    Stroke="#E0E0E0"
                    BackgroundColor="#FAFAFA"
                    StrokeShape="RoundRectangle 12"
                    Padding="0"
                    HeightRequest="55">
				<Entry Placeholder=""
                       IsPassword="True"
                       PlaceholderColor="#999999"
                       TextColor="#000000"
                       FontFamily="Roboto"
                       FontSize="16"
                       Margin="15,0"/>
			</Border>

			<!-- Login Button -->
			<Button Text="Se connecter"
                    BackgroundColor="#3A2A97"
                    TextColor="#FFFFFF"
                    FontFamily="Roboto"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="28"
                    Margin="0,20,0,0"
                    Clicked="OnLoginClicked"/>

			<!-- Facebook Login Button -->
			<Border StrokeThickness="2"
                    Stroke="#3A2A97"
                    BackgroundColor="#FFFFFF"
                    StrokeShape="RoundRectangle 28"
                    Padding="0"
                    HeightRequest="55"
                    Margin="0,10,0,0">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="50"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>

					<Label Text="f"
                           Grid.Column="0"
                           FontFamily="Arial"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#3A2A97"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>

					<Label Text="Login with Facebook"
                           Grid.Column="1"
                           FontFamily="Roboto"
                           FontSize="16"
                           TextColor="#3A2A97"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"
                           Margin="0,0,0,0"/>
				</Grid>
			</Border>

			<!-- Spacer -->
			<BoxView HeightRequest="100" Color="Transparent"/>

			<!-- Create Account Button -->
			<Border StrokeThickness="2"
                    Stroke="#3A2A97"
                    BackgroundColor="#FFFFFF"
                    StrokeShape="RoundRectangle 28"
                    Padding="0"
                    HeightRequest="55">
				<Button Text="Créer un nouveau compte"
                        BackgroundColor="Transparent"
                        TextColor="#3A2A97"
                        FontFamily="Roboto"
                        FontSize="16"
                        FontAttributes="Bold"
                        Clicked="OnCreateAccountClicked"/>
			</Border>

		</VerticalStackLayout>
	</ScrollView>

</ContentPage>